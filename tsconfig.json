{
  "compilerOptions": {
    "target": "ES5",
    "allowJs": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "esnext",
      "DOM.Iterable"
    ],
    "plugins": [],
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}